.post-list
  width 100%
  background #f2f2f2
  display table
  @import "../common/search_bar.import.styl"
  .category2-container
    display flex
    height 50px
    .tab
      flex 10
      display flex
      text-align center
      background #0099D8
      color white
      height 100%
      label
        margin auto
    .tab.selected
      text-align center
      background #DEF0FE
      color #0099D8

  .item-list
    display table
    width 100%
    @import 'note/list_item.import.styl'
    @import 'say/list_item.import.styl'
    @import 'journey/list_item_official.import.styl'
    @import 'journey/list_item_user.import.styl'
    @import 'product/list_item_official.import.styl'
    @import 'product/list_item_user.import.styl'

  .loadmore-button
    margin 0
    width 100%
    height 4em
  @import '../common/tab_bar.import.styl'

.ionic-body
  .nav-bar-block
    [data-action="search"]
      right 2.5em