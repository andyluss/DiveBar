.image-uploader.hidden
  display none

.image-uploader
  width 96px
  max-width 96px
  height 96px
  max-height 96px
  display inline-block
  margin 1px
  float left
  .inner-box
    width 100%
    height 100%
    position relative
    .image-container
      display flex
      width 100%
      height 100%
      background #FFF url(/images/loading.gif) no-repeat center center
      img
        max-width 100%
        max-height 100%
        margin: auto
