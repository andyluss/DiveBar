.comments-box
  padding 0
  max-width 100%
  .comments
    padding-top 0
  .title-bar
    padding-left 10px
    padding-right 10px
    background #f4f4f4
    label
      color: #bab7b1
      font-size: 0.8em
  .comment-form
    display flex
    .field
      flex 1
      textarea
        min-height 3.5em
        padding-left 10px
        padding-right 10px
    button
      min-height 3em
      border-width 0
      background #a3ce5f
      color white
      font-weight bold
      border-radius 0
  .comment
    display flex
    padding 2px 10px
    border-bottom solid 1px #f5f4f3
    .avatar-container
      size 56px
      margin-right 10px
      @import '../../../lib/common/client/views/user_avatar.import.styl'
    .right-box
      .author-bar
        display inline
        .author
          color #2b9ad5
        .actions
          display inline
          color #959387
      .comment-content
        color #959387
  .loadmore-action
    margin 0
    width 100%