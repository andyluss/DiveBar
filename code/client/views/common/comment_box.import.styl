.comments-box
  padding 0
  max-width 100%
  .comments
    padding-top 0
  .comment-form
    width 100%
    padding 4px 6px
    background #DDDDDD
    display flex
    .field
      flex 10
      input
        padding-left 10px
        padding-right 10px
        border-radius 8px
    .send-button
      flex 1
      min-width 3em
      width 3em
      min-height 34px
      height 34px
      line-height 34px
      font-size 16px
  .comment
    display flex
    padding 2px 10px
    border-bottom solid 1px #f5f4f3
    .avatar-container
      min-width 56px
      width 56px
      height 56px
      margin-right 10px
      @import 'user_avatar.import.styl'
      img
        size 56px
    .right-box
      width 100%
      .author-bar
        display inline
        .author
          color #2b9ad5
      .comment-content
        color #959387
      .actions
        float right
        right 10px
        top 2px
        color #959387
  .loadmore-action
    margin 0
    width 100%