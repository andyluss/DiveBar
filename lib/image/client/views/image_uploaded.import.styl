.image-uploaded.hidden
  display none

.image-uploaded
  width 96px
  max-width 96px
  height 96px
  max-height 96px
  display inline-block
  margin 1px
  float left
  .inner-box
    width 100%
    height 100%
    position relative
    .image-container
      position absolute
      display flex
      width 100%
      height 100%
      .image
        max-width 100%
        max-height 100%
        margin auto
    .progress-container
      position absolute
      width 100%
      height 100%
      display flex
      background #FFF
      .progress
        font-size 20px
        margin auto
    .delete.button
      position absolute