.note-list-item
  height 240px
  margin-bottom 10px
  &:last-child
    margin-bottom 0
  .content-container
    height 200px
    .image-container
      background #cccccc
      size 100%
    .info-bar
      position relative
      bottom 50px
      size 100% 50px
      .info-bg
        position absolute
        size 100%
        background black
        opacity 0.5
      label
        color white
        position relative
      .info-title
        font-size 20px
        padding-left 10px
      .info-line-2-left
        position absolute
        padding-left 10px
      .info-line-2-right
        position absolute
        right 10px
      .info-user-avatar
        position absolute
        top 6px
        right 10px
        size 20px
        img
          size 20px
  .button-bar
    size 100% 40px
    bottom 0
    background white
    button
      size 50% 100%
      border-style none
      background-color white
      color #CDCDCD
      text-align center
      font-size 20px
      i:before
        color #E5EAEB
        vertical-align top
        font-size 30px
      i.highlight
        &:before
          color blue