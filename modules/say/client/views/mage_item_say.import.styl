.image-item-say
  position relative
  padding 10px 0 10px 70px
  background-color #fff
  border-bottom 1px solid #000
  z-index 1
  .user-avatar
    position absolute
    left 5px
    top 10px
    z-index 2
    a
      display block
      overflow hidden
      border-radius 60px
      img
        display block
        width 60px
        height 60px
  .user
    color #315F90
    font-size 16px
    line-height 24px
  .item-say
    .item-container
      .text
        margin-top 10px
        padding-right 10px
        font-size 16px
        line-height 24px
      .image-container
        margin-top 10px
        overflow hidden
        .image-block
          float left
          margin-right 10px
          overflow hidden
          max-width 102px
          img
            height 82px
      .banner
        margin-top 10px
        color #999
        font-size 14px
        line-height 24px
        display flex
        .date
          display flex
          flex 1
        .recall
          position relative
          display flex
          margin-right 15px
          width 25px
          height 20px
          background-color #A6B7D3
          border-radius 2px
          cursor pointer
          z-index 1
        .recall:before
          content ""
          position absolute
          left -9px
          top 5px
          display block
          width 0
          height 0
          border 5px solid transparent
          border-right-color #A6B7D3
          z-index 2
        .recall:after
          content ""
          position relative
          top 8px
          left 5px
          display block
          width 14px
          height 4px
          border-left 4px solid #fff
          border-right 4px solid #fff