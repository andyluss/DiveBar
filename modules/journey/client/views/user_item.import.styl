.journey.user-item
  background #f8fbfd
  display flex
  padding 10px
  border-bottom solid 1px #badef1
  .user-box
    flex 1
    min-width 56px
    text-align center
    color #2b9ad5
    font-weight bold
    margin-right 10px
    a
      font-size 0.8em
    .avatar-container
      size 56px
      @import '../../../lib/common/client/views/user_avatar.import.styl'
  .right-box
    flex 5
    .title-container
      .title
        font-weight bold
        color #2b9ad5
      .date
        position absolute
        right 10px
        color #ed9606
    .content-container
      display inline-block
      width 100%
      color #898a8b
      table
        width 100%
        tr
          width 100%
          td
            width 50%
            padding-top 0.3em
